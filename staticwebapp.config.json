{
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/api/*"]
    },
        "routes": [
          {
            "route": "/api/*",
            "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
            "headers": {
              "Access-Control-Allow-Origin": "*",
              "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
              "Access-Control-Allow-Headers": "*"
            }
          }
        ],
        "navigationFallback": {
          "rewrite": "/index.html",
          "exclude": ["/api/*"]
        },
        "platform": {
          "apiRuntime": "node:20"
        }
}